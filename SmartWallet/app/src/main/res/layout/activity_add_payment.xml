<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPaymentActivity">

    <EditText
        android:id="@+id/paymentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:tooltipText="Payment name"
        app:layout_constraintEnd_toEndOf="@+id/paymentType"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/paymentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:tooltipText="Payment type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentName" />

    <EditText
        android:id="@+id/ePayCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        android:tooltipText="Cost"
        app:layout_constraintEnd_toEndOf="@+id/paymentType"
        app:layout_constraintTop_toBottomOf="@+id/paymentType" />

    <Button
        android:id="@+id/addPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ePayCost" />
</androidx.constraintlayout.widget.ConstraintLayout>